public boolean postMine(ItemStack stack, World world, net.minecraft.block.BlockState state, net.minecraft.util.math.BlockPos pos, net.minecraft.entity.LivingEntity miner) {
        if (item.onPostMine(
                new org.waveapi.api.world.inventory.ItemStack(stack),
                new org.waveapi.api.world.world.World(world),
                new org.waveapi.api.world.world.BlockState(state),
                new org.waveapi.api.math.BlockPos(pos),
                (org.waveapi.api.world.entity.living.EntityLiving) org.waveapi.content.entity.EntityHelper.wrap(miner))) {
            return super.postMine(stack, world, state, pos, miner);
        }

        return true;
    }